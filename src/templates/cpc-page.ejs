<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= cpc.name %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-gray-100 text-gray-900">

<!-- Include Navbar Partial -->
<%- include('partials/navbar') %>

<main class="max-w-4xl mx-auto p-6 bg-white shadow-md rounded-lg mt-6">
    <p class="text-gray-700 mb-4"><%= cpc.description %></p>
    <% if (cpc.website) { %>
        <a href="<%= cpc.website %>" class="text-blue-500 hover:text-blue-700 font-semibold underline">
            Visit Website
        </a>
    <% } %>
</main>

<footer class="bg-gray-800 text-white text-center p-4 mt-6">
    <p>&copy; 2024 MyBodyMyChoice.ca</p>
</footer>


<!-- JavaScript for toggling the mobile menu -->
<script>
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuButton.addEventListener('click', () => {
        console.log("mobile menu cilck");
        const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
        mobileMenuButton.setAttribute('aria-expanded', !isExpanded);
        mobileMenu.classList.toggle('hidden');
    });
</script>

</body>
</html>
