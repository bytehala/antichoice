<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= cpc.name %></title>
    <link rel="stylesheet" href="./css/styles.css">
</head>
<body class="bg-gray-100 text-gray-900">

<!-- Include Navbar Partial -->
<%- include('partials/navbar') %>

<main>
<div class="max-w-3xl mx-auto p-6 bg-white shadow-md rounded-lg">
    <!-- Display Name as h1 -->
    <h1 class="text-2xl font-bold text-gray-900 mb-4"><%= cpc.name %></h1>

    <!-- Description (if available) -->
    <% if (cpc.description) { %>
        <p class="mb-6 text-gray-700"><%= cpc.description %></p>
    <% } %>

    <!-- Table for other key-value pairs -->
    <table class="w-full border border-gray-200">
        <tbody>
        <%
        // Define a mapping for custom headers and transformations
        const headers = {
            is_charity: 'Charity?',
            charity_num: 'Charity Number',
            charity_type: 'Charity Type',
            org_type: 'Org. Type',
            affiliate_of: 'Affiliate of (and religious affiliation)',
            city: 'City',
            province: 'Province',
            other_names: 'Other Names',
            website: 'Website and Social Media',
            sex_ed_programs: 'Sex Ed Programs'
        };

        // Iterate over each key-value pair in the CPC data object
        Object.entries(cpc).forEach(([key, value]) => {
            // Only render rows for keys in the headers map and non-empty values
        if (headers[key] && value) {
        %>
            <tr class="border-t border-gray-200">
                <!-- Render the custom header text -->
                <td class="px-4 py-2 font-semibold capitalize"><%= headers[key] %></td>
                <td class="px-4 py-2">
                    <%
                        // Special case for is_charity: Convert "Y" to "Yes" and "N" to "No"
                    if (key === 'is_charity') {
                    %><%= value === 'Y' ? 'Yes' : 'No' %><%
                    } else if (Array.isArray(value)) {
                        // Join array values with line breaks for readability
                    %><span><%= value.join('<br>') %></span><%
                    } else {
                        // Render other values as they are
                    %><%= value %><%
                    }
                    %>
                </td>
            </tr>
        <%
        }
        });
        %>
        </tbody>
    </table>
</div>
</main>

<footer class="bg-gray-800 text-white text-center p-4 mt-6">
    <p>&copy; 2024 antichoice.ca</p>
</footer>

</body>
</html>
