<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= cpc.name %></title>
    <link rel="stylesheet" href="./css/styles.css">
</head>
<body class="bg-gray-100 text-gray-900">

<!-- Include Navbar Partial -->
<%- include('partials/navbar') %>

<main>
<div class="max-w-3xl mx-auto p-6 bg-white shadow-md rounded-lg">
    <!-- Display Name as h1 -->
    <h1 class="text-2xl font-bold text-gray-900 mb-4"><%= cpc.name %></h1>

    <!-- Description (if available) -->
    <% if (cpc.description) { %>
        <p class="mb-6 text-gray-700"><%= cpc.description %></p>
    <% } %>

    <!-- Table for other key-value pairs -->
    <table class="w-full border border-gray-200">
        <tbody>
        <% Object.entries(cpc).forEach(([key, value]) => { %>
            <% if (key !== 'name' && key !== 'description' && key !== 'slug' && value) { %>
                <tr class="border-t border-gray-200">
                    <td class="px-4 py-2 font-semibold capitalize"><%= key.replace('_', ' ') %></td>
                    <td class="px-4 py-2">
                        <% if (Array.isArray(value)) { %>
                            <!-- Join array values with line breaks -->
                            <span><%= value.join('<br>') %></span>
                        <% } else { %>
                            <%= value %>
                        <% } %>
                    </td>
                </tr>
            <% } %>
        <% }) %>
        </tbody>
    </table>
</div>
</main>

<footer class="bg-gray-800 text-white text-center p-4 mt-6">
    <p>&copy; 2024 antichoice.ca</p>
</footer>

</body>
</html>
