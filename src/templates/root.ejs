<script>
    // Load JSON data and populate each province section with org-objects
    fetch('./cpcs.json')
        .then(response => response.json())
        .then(data => {
            const sections = {}; // To track if any orgs have been added to each section

            data.forEach(cpc => {
                // Determine the correct section based on the province
                const sectionId = `${cpc.province.toLowerCase()}-section`;
                const section = document.getElementById(sectionId);

                if (section) {
                    // Track that this section has at least one organization
                    sections[sectionId] = true;

                    // Create an org-object element with name, city, and province
                    const orgObject = document.createElement('span');
                    orgObject.classList.add('col-span-12', 'mt-4', 'md:col-span-6', 'xl:col-span-4', 'px-2');
                    orgObject.innerHTML = `
                        <span class="org-object">
                            <span>${cpc.name}</span>
                            <span class="text-lg block font-extralight">${cpc.city}, ${cpc.province}</span>
                        </span>
                    `;

                    // Append the org-object to the section
                    section.querySelector('.grid').appendChild(orgObject);
                }
            });

            // Check each province section and display a message if empty
            document.querySelectorAll('[id$="-section"]').forEach(section => {
                if (!sections[section.id]) {
                    // Display the no-organizations message
                    const message = document.createElement('div');
                    message.classList.add('text-lg', 'block', 'font-extralight', 'text-center', 'mt-4');
                    message.textContent = "No known organizations. If you think this is a mistake, please let us know.";
                    section.appendChild(message);
                }
            });
        })
        .catch(error => console.error('Error loading JSON data:', error));
</script>


